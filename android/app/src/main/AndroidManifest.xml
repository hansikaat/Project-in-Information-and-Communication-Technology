<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.huntertalk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".userRelated.FriendList"
            android:label="@string/friendList"
            android:parentActivityName=".ui.firstLaunch.Home_page"></activity>
        <activity android:name=".userRelated.SettingsPage" />
        <activity
            android:name=".ui.firstLaunch.ResetPassword"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".ui.firstLaunch.LoginActivity" />
        <activity
            android:name=".everythingWithGroups.CreateGroupPage"
            android:label="@string/title_create_group"
            android:parentActivityName=".ui.firstLaunch.Home_page" />
        <activity
            android:name=".everythingWithGroups.InsideGroupActivity"
            android:label="@string/title_activity_inside_group"
            android:parentActivityName=".ui.firstLaunch.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".everythingWithGroups.JoinAGroupById"/>
        <activity android:name=".ui.firstLaunch.Home_page" />
        <activity
            android:name=".ui.firstLaunch.LoginActivity"
            android:label="@string/title_activity_login">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.firstLaunch.RegistrationActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".ui.firstLaunch.LoginActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="InviteNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>