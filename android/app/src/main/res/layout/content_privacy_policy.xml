<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PrivacyPolicy"
    tools:showIn="@layout/activity_privacy_policy">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/titleWindow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/messageWindow" />

        <CheckBox
            android:id="@+id/privacy_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="By checking this box you agree to our privacy policy" />

        <Button
            android:id="@+id/proceed_to_registration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Proceed to registration"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>